        var children = response['results']['collection1'];

        //console.log(children);

        $.each(children, function (key, value) {

            var trend  = children[key]['trend'];

            trend_href = bingIt(trend);
            var favicon_img = generateFavicon(trend_href);

            var favicon = "<img style='width: 20px !important; margin-bottom: 0 !important; padding-right: 10px' src='" + favicon_img + "'/>";
            var article = "<div class='article'><a class='title' target='_blank' href='" + trend_href + "'>" + favicon + trend + "</a></div>";

            $('#news').append(article);

        });

  },
  error: function (xhr, status) {
    //handle errors
  }
});</script>